<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_listview_img"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/relative_header_mother_service"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/navbar_fill"
        android:orientation="horizontal"
        android:paddingLeft="0dp"
        android:paddingRight="0dp" >

        <LinearLayout
            android:id="@+id/linear_layout_mother_service_back"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/relative_layout_mother_service_highlited"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp" >

                <ImageButton
                    android:id="@+id/imgbtn_back_mother_service"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:baselineAlignBottom="false"
                    android:clickable="false"
                    android:duplicateParentState="true"
                    android:paddingBottom="13dp"
                    android:paddingTop="13dp"
                    android:scaleType="fitStart"
                    android:src="@drawable/back" />

                <ImageView
                    android:id="@+id/image_view_back_mother_service"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:clickable="false"
                    android:duplicateParentState="true"
                    android:paddingBottom="13dp"
                    android:paddingTop="13dp"
                    android:src="@drawable/sc" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="54dp"
                android:gravity="center_horizontal|center_vertical"
                android:paddingLeft="0dp"
                android:text="মায়ের জন্য সেবা"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="54dp"
                android:paddingLeft="10dp"
                android:text="১। গর্ভবতী মায়ের জন্য করনীয়"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="35dp" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="54dp"
                    android:paddingLeft="10dp"
                    android:text="ক। খাবার বিধি"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="54dp"
                    android:paddingLeft="10dp"
                    android:text="খ। করনীয় কাজ"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="54dp"
                    android:paddingLeft="10dp"
                    android:text="গ। বর্জনীয় কাজ"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="54dp"
                    android:paddingLeft="10dp"
                    android:text="ধ। টীকা  তথ্য"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="54dp"
                android:paddingLeft="10dp"
                android:text="২। প্রসব পরবর্তী মায়ের জন্য করনীয়"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="35dp" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="54dp"
                    android:paddingLeft="10dp"
                    android:text="ক। খাবার বিধি"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="54dp"
                    android:paddingLeft="10dp"
                    android:text="খ। করনীয় কাজ"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="54dp"
                    android:paddingLeft="10dp"
                    android:text="গ। বর্জনীয় কাজ"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="54dp"
                    android:paddingLeft="10dp"
                    android:text="ধ। টীকা  তথ্য"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>