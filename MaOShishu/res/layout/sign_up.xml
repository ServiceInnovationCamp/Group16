<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_layout_root_signup"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/relative_header_signup"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/navbar_fill"
        android:orientation="horizontal"
        android:paddingLeft="0dp"
        android:paddingRight="0dp" >

        <LinearLayout
            android:id="@+id/linear_layout_signup_back"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/relative_layout_signup_highlited"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp" >

                <ImageButton
                    android:id="@+id/imgbtn_back_signup"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:baselineAlignBottom="false"
                    android:clickable="false"
                    android:duplicateParentState="true"
                    android:paddingBottom="13dp"
                    android:paddingTop="13dp"
                    android:scaleType="fitStart"
                    android:src="@drawable/back" />

                <ImageView
                    android:id="@+id/image_view_back_signup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:clickable="false"
                    android:duplicateParentState="true"
                    android:paddingBottom="13dp"
                    android:paddingTop="13dp"
                    android:src="@drawable/sc" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_linen_screen"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="15dip" >

        <TextView
            android:id="@+id/tv_sign_up_error"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/signup_error"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/et_name"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_common_form_field"
            android:ems="10"
            android:hint="@string/name"
            android:paddingLeft="10dip" />

        <EditText
            android:id="@+id/et_pregnancy_date"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_common_form_field"
            android:ems="10"
            android:hint="@string/fragnency_data"
            android:inputType="date"
            android:paddingLeft="10dip" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginTop="10dp" >

            <Spinner
                android:id="@+id/sp_zilla"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dip"
                android:background="@drawable/editable_item_arrows" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp" >

            <Spinner
                android:id="@+id/sp_upozilla"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dip"
                android:background="@drawable/editable_item_arrows" />
        </RelativeLayout>

        <EditText
            android:id="@+id/et_mobile_number_1"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_common_form_field"
            android:ems="10"
            android:hint="@string/mobile_one"
            android:inputType="phone"
            android:paddingLeft="10dip" />

        <EditText
            android:id="@+id/et_mobile_number_2"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_common_form_field"
            android:ems="10"
            android:hint="@string/mobile_two"
            android:inputType="phone"
            android:paddingLeft="10dip" />

        <Button
            android:id="@+id/btn_sign_up"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:background="@drawable/bt_bg_blue_half"
            android:text="@string/registration"
            android:textColor="@android:color/white"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>